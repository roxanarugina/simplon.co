!!!
%html
  %head
    %title Simplon.co, fabrique de codeurs entreprenants
    %link{:href => "http://fonts.googleapis.com/css?family=Inconsolata:400,700|Open+Sans+Condensed:300,700&subset=latin,latin-ext", :rel => "stylesheet", :type => "text/css"}/
    %meta{:charset => "utf-8"}/
    %link{:href => "http://yui.yahooapis.com/3.9.1/build/cssreset/cssreset-min.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/styles.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/stylesheets/app.css", :rel => "stylesheet", :type => "text/css"}/
    %meta(name="viewport" content="width=device-width")
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-39912989-1']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    .contain-to-grid.fixed
      .row
        .large-12
          %nav.top-bar
            %ul.title-area
              / Title Area
              %li.name
                %h1
                  %a{:href => "/"} Simplon.co
            %section.top-bar-section
              / Right Nav Section
              %ul.right
                %li
                  %a(href="/recrutement") Recrutement
                %li
                  %a(href="/en") In English
    .row
      .large-12
        = yield
